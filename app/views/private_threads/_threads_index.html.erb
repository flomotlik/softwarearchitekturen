<% for thread in @threads %>
<div class="message unread" id="msg_1">
    <table>
        <tbody>
            <tr>
                <td class="message_from">
                    <div>
                        <% 
							users = find_users_by_threadid thread.id
							for user in users 
						%>
						<span class="thread_user"><%= corrected_username user %></span>&nbsp;
						<% end %>
                    </div>
                    <div class="meta" style="padding-top: 0!important">
                        <%= thread.date.to_s(:long) %>
                    </div>
                </td>
                <td>
                    <div class="subject">
                        <%= link_to thread.title, {:action => :show, :id => thread.id} %> 
						<span class="meta" style="padding-top: 0!important">last update: <%= thread.date_of_newest_entry.to_s(:long) %></span>
                    </div>
                    <div class="message_content">
                        <%= content_of_newest_threadentry thread.id %>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<% end %>