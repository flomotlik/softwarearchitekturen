<div id="left">
    <h2><%= @currentthread ? @currentthread.title : 'Untitled Thread' %></h2>
    <%= link_to "<< Back to overview", {:action => :index} %>
    <%= render :partial => 'thread_entries', :object => @threadentries %>
    <div>
        <div class="answer">
            <p>
                <% form_remote_tag :url => { :action => "add_entry_to_thread" } do %>
                <%= text_field(:newentry, :content, :class => "input_answer") %>
                <%= hidden_field_tag(:thread_id, @currentthread.id) %>
                <%= submit_tag("Answer with this message") %>
                <% end %>
            </p>
        </div>
    </div>
</div>
<div id="right">
    &nbsp;
</div>
