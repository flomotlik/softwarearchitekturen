<div id="left">
				<h2><%=  @currentthread ? @currentthread.title : 'Untitled Thread' %></h2>
				<div class="subject" style="padding-left: 14px!important">CHANGEME!</div>
				
				
				<% for threadentry in @threadentries 
					entry = find_entry threadentry.entry_id
					user = find_user_by_id entry.user_id
 					%>
				
				<div class="message">
					<div><%= user.login %> <span class="meta" style="padding-top: 0!important"><%= entry.date.to_s(:long) %></span></div>
					<div class="message_content">
						<%= entry.content %>
					</div>			
				</div>
				<% end %>
				
				
				<div>
					<div class="answer">
						<p>
						<% form_tag(:action => 'add_entry_to_thread', :method => "post") do %>
							<%= text_field(:newentry, :content, :class => "input_answer") %>
							<%= hidden_field_tag(:thread_id, @currentthread.id) %>
							<%= submit_tag("Answer with this message") %>
						<% end %>
						</p>
					</div>
				</div>
				
			</div>
			<div id="right">&nbsp;</div>